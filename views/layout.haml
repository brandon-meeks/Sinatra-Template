!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width", :"initial-scale" => 1, :"shrink-to-fit" => 'no'}
    %meta{:content => "#{session[:csrf]}", :name => "csrf-token"}
    %meta{:content => "authenticity_token", :name => "csrf-param"}
    %title
      App Template >>
      = @page_title

    <!-- Bootstrap Latest compiled and minified CSS -->
    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :integrity => "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", :crossorigin => "anonymous"}
    <!-- Font Awesome -->
    %link{:rel => "stylesheet", :href => "https://use.fontawesome.com/releases/v5.1.0/css/all.css", :integrity => "sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt", :crossorigin => "anonymous"}
    <!- Custom CSS -->
    %link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/application.css"}

    %script{:src => "https://code.jquery.com/jquery-3.3.1.min.js", :integrity => "sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=", :crossorigin => "anonymous"}

    %script
      $(function () {
      $.ajaxSetup({
      headers: {
      'HTTP_X_CSRF_TOKEN': $('meta[name="csrf-token"]').attr('content')
      }
      });
      });
    %script
      setTimeout("$('.alert-success').fadeOut('slow')",3000);
      setTimeout("$('.alert-danger').fadeOut('slow')",3000);

  %body

    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button{:type => "button", :class => "navbar-toggle collapsed", :"data-toggle" => "collapse", :"data-target" => "navbar-collapse-1", :"aria-expanded" => "false"}
            %span{:class => "sr-only"}Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"}Brand

        %div.collapse.navbar-collapse#navbar-collapse-1
          %ul.nav.navbar-nav.navbar-right
            %li
              %a(href="#") Login

    .container
      #page-wrapper
        #flash_messages
          - flash.keys.each do |type|
            %div{:class => "alert alert-#{type}", :role => "alert"}
              = flash[type]

        = yield

    %footer.footer
      .container
        %p.text-muted.text-center#copyright
          Copyright Â©
          = Time.now.year

    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", :integrity => "sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", :crossorigin => "anonymous"}
    %script{:src => "/javascripts/application.js", :type => "text/javascript"}
